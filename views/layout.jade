doctype html
html(np-app='')
    head
        title Jeremy Pridemore - Functional Madness

        meta(name='viewport' content='width=device-width, initital-scale=1.0')

        link(rel='stylesheet' href='/components/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet' href='/components/bootstrap/dist/css/bootstrap-theme.min.css')
        link(rel='stylesheet' href='/stylesheets/style.css')

        block stylesheets

    body
        nav.navbar.navbar-inverse(role='navigation')
            div.container
                div.row
                    div.navbar-header.col-sm-3.col-xs-12
                        a.bright.navbar-brand.col-sm-(href='/') Jeremy Pridemore
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar

                    div#navbar-collapse.collapse.navbar-collapse
                        ul.nav.navbar-nav
                            li.hidden-sm.hidden-md.hidden-lg
                                a(href='http://www.github.com/Riobe/jeremypridemore-me') GitHub Repo
                            li.dropdown 
                                a.dropdown-toggle(href='#', data-toggle='dropdown') Experiments <span class='caret'></span>
                                ul.dropdown-menu(role='menu')
                                    li
                                        a(href='/users') Users MongoDB Test
                                    li
                                        a(href='/resume-builder') Resume Builder

                        ul.nav.navbar-right.hidden-xs
                            li
                                a(href='http://www.github.com/Riobe/jeremypridemore-me')
                                    img(src='/images/GitHub-Mark-Light-32px.png')
        block content
        
        script(src='/components/jquery/dist/jquery.min.js')
        script(src='/components/bootstrap/dist/js/bootstrap.min.js')
        script(src='/components/angular/angular.min.js')

        block scripts

